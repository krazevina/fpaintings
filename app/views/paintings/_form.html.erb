<%= form_for @painting do |f| %>

    <% if @painting.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@painting.errors.count, "error") %> prohibited
            this painting from being saved:
          </h2>
          <ul>
            <% @painting.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :artist %><br>
      <%= f.select(:artist_id, Artist.all.collect {|c| [c.name, c.id]}) %>
    </p>
    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.label :year %><br>
      <%= f.text_field :year %>
    </p>
    <p>
      <%= f.label :material %><br>
      <%= f.text_field :material %>
    </p>
    <p>
      <%= f.label :location %><br>
      <%= f.text_field :location %>
    </p>
    <p>
      <%= f.label :image %><br>
      <%= f.file_field :image %>
    </p>
    <p>
      <%= f.label :category %><br>
      <%= f.select(:category_id, Category.all.collect {|c| [c.nametype, c.id]}) %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>
